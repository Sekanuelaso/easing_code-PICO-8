pico-8 cartridge // http://www.pico-8.com
version 23
__lua__
function box_hit(
	x1,y1,
	w1,h1,
	x2,y2,
	w2,h2)
	
 hit=false
	
	local xs=w1/2+w2/2
	local ys=h1/2+h2/2
	local xd=abs((x1+(w1/2))-(x2+(w2/2)))
	local yd=abs((y1+(h1/2))-(y2+(h2/2)))

	if xd<xs and 
				yd<ys then 
		hit =true
	end

	return hit
end
-->8
--movimiento

--bola
x=10
y=10
w=8
h=8 
speed=3

--emenigo=cuadrado rojo
ex=63
ey=63
ew=16
eh=16

function _update()
	
	
	if btn(0) then 
		for newx=x,x-speed,-1 do
			if not box_hit(newx,y,w,
										h,ex,ey,ew,eh) then
				x=newx
			end
		end
	end

	if btn(1) then 
	for newx=x,x+speed do
			if not box_hit(newx,y,w,
										h,ex,ey,ew,eh) then
				x=newx
			end 
		end
	end
	
	if btn(2) then 
		for newy=y,y-speed,-1 do
			if not box_hit(x,newy,w,
										h,ex,ey,ew,eh) then
				y=newy
			end 
		end
	end

	if btn(3) then 
		for newy=y,y+speed do
			if not box_hit(x,newy,w,
										h,ex,ey,ew,eh) then
				y=newy
			end
		end
	end

end
function _draw()
	
	cls()
	spr(0,x,y)
	spr(1,ex,ey,2,2)--de 2x2

end
